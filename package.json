{
  "name": "life",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "classnames": "^2.2.6",
    "empty": "^0.10.1",
    "flat": "^5.0.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^5.20.10",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "dist": "cross-env BUILD_PATH='./dist' GENERATE_SOURCEMAP=false react-scripts build",
    "test": "jest test  --setupFilesAfterEnv='./src/setupTests.js'",
    "test-update-snapshots": "npm run test -- -u",
    "test-coverage": "npm run test -- --coverage --coverageDirectory=./coverage/",
    "eject": "react-scripts eject",
    "extract-messages": "extract-messages -l=ru,en -o src/messages -d ru --flat false \"src/**/!(*.test).js\""
  },

  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "\\.(png|jpg|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "^src(.*)$": "<rootDir>/src$1",
      "^(utils|model|controls|images|services|constants|logic|components)/(.*)$": "<rootDir>/src/$1/$2",
      "^lodash-es$": "lodash"
    },
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/testUtils/*",
      "<rootDir>/src/constants/*",
      "<rootDir>/src/configs.js",
      "<rootDir>/src/serviceWorker.js",
      "<rootDir>/src/index.js"
    ],
    "transformIgnorePatterns": ["<rootDir>/node_modules/(?!lodash-es)/"]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.4",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/plugin-proposal-export-default-from": "^7.14.5",
    "@babel/plugin-proposal-export-namespace-from": "^7.14.5",
    "@babel/plugin-proposal-function-bind": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@types/lodash-es": "^4.17.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-plugin-react-intl": "^8.2.25",
    "babel-plugin-react-intl-auto": "^3.3.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-flowtype": "^5.9.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "extract-react-intl-messages": "^4.1.1",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.0",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.1.2",
    "prettier": "1.17.0",
    "prettier-stylelint": "^0.4.2",
    "prop-types": "latest",
    "rosie": "^2.1.0",
    "sass": "^1.39.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1"
  }
}
